= form_for @smallsurvey do |f|
  - if @smallsurvey.errors.any?
    #error_explanation
      %h2= "#{pluralize(@smallsurvey.errors.count, "error")} prohibited this smallsurvey from being saved:"
      %ul
        - @smallsurvey.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :review
    = f.text_field :review
  .actions
    = f.submit 'Save'
